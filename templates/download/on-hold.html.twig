{% extends 'base.html.twig' %}

{% block title %}Preuzimanja na ƒçekanju{% endblock %}

{% block body %}

<div class="container">
	<div class="row">
		<div class="col col-md-6 col-sm-12">
			<ul>
				{% for hold in onHold %}
					<li>
						<div><img src="{{ hold.thumb }}" /></div>
						<h1>{{ hold.youtubeInfo | queueGetTitle }}</h1>
						URL: <a href="{{ hold.url }}" target="_blank">{{ hold.url }}</a><br />
						Kreirano: {{ hold.createdAt | date('d.m.Y H:i:s') }}<br />
						Na redu ZA: {{ hold.id | onHoldOrder }}
					</li>
					<hr>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>

{% endblock %}
